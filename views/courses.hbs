<h1>Courses Page</h1>

<div class="row">
  {{#if courses.length}}
  {{#each courses}}
  <div class="col s3">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>
      <div class="card-action">
        <a href="/courses/{{id}}" target="_blank">Открыть курс</a>
      </div>
    </div>
  </div>
  {{/each}}
  {{else}}
  <p>Курсов пока нет</p>
  {{/if}}
</div>